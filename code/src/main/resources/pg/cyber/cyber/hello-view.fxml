<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pg.cyber.cyber.AppController" styleClass="main-layout">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" styleClass="input-row">
        <Label fx:id="welcomeText" text="File:" styleClass="label" />
        <Button onAction="#onHelloButtonClick" text="Select File" styleClass="button" />
    </HBox>

    <HBox alignment="CENTER_LEFT" styleClass="input-row">
        <Label text="Password:" styleClass="label"/>
        <TextField fx:id="passwordField" styleClass="text-field"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" styleClass="input-row">
        <ComboBox prefWidth="150.0" promptText="Encryption" fx:id="encryption" styleClass="combo-box"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" styleClass="input-row">
        <Button text="Encrypt" onAction="#onEncryptButtonClick" styleClass="button" />
        <Button text="Decrypt" onAction="#onDecryptButtonClick" styleClass="button" />
    </HBox>
</VBox>
